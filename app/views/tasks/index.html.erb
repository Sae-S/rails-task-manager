<div class = "container">
  <div class="d-flex justify-content-between">
    <h1>Tasks</h1>
  </div>

    <% @tasks.each do |task| %>
    <ul>
      <% if task.completed?%>
        <i class="far fa-check-square"></i>
      <% else%>
        <i class="far fa-square"></i>
      <% end %>

      <%= link_to task.title , task_path(task) %>

      <%= link_to task_path(task), method: :delete, data: {confirm: "Really delete #{task.title}?"} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </ul>
    <% end %>


  <i class="fas fa-plus"></i> <%=  link_to 'Add a new task' , new_task_path(@tasks)%>
</div>
